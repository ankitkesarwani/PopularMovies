<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/details_base_margin"
                android:layout_marginStart="@dimen/details_base_margin"
                android:text="@string/details_overview" />

            <TextView
                android:id="@+id/tv_overview"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/details_half_margin"
                android:layout_marginEnd="@dimen/details_base_margin"
                android:layout_marginStart="@dimen/details_base_margin"
                android:layout_marginTop="@dimen/details_half_margin"
                tools:text="@string/dummy_overview" />

            <TextView
                android:id="@+id/tv_trailers"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/details_base_margin"
                android:layout_marginStart="@dimen/details_base_margin"
                android:layout_marginTop="@dimen/details_base_margin"
                android:text="@string/details_trailers" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/details_base_margin"
                android:layout_marginStart="@dimen/details_base_margin"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:id="@+id/layout_trailers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_reviews"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/details_base_margin"
                android:layout_marginStart="@dimen/details_base_margin"
                android:layout_marginTop="@dimen/details_base_margin"
                android:text="@string/details_reviews" />

            <LinearLayout
                android:id="@+id/layout_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/details_base_margin"
                android:layout_marginStart="@dimen/details_base_margin"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>
</layout>