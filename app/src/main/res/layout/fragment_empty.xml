<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.sedsoftware.udacity.popularmovies.fragments.EmptyFragment"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/tv_empty_info"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/details_base_margin"
        android:text="@string/no_movie_selected"
        android:textColor="@color/colorLightText"
        app:layout_constraintBottom_toTopOf="@+id/iv_empty_placeholder"
        app:layout_constraintLeft_toLeftOf="@+id/iv_empty_placeholder"
        app:layout_constraintRight_toRightOf="@+id/iv_empty_placeholder" />

    <ImageView
        android:id="@+id/iv_empty_placeholder"
        android:contentDescription="@string/details_tmdb_logo"
        android:scaleType="centerInside"
        android:tint="@color/colorLightText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tmdb_icon"
        android:layout_width="150dp"
        android:layout_height="100dp" />

</android.support.constraint.ConstraintLayout>
